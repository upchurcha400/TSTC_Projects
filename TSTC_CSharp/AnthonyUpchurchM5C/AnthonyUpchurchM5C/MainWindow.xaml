            <ComboBoxItem Content="12 PM" />
            <ComboBoxItem Content="1 PM" />
            <ComboBoxItem Content="2 PM" />
            <ComboBoxItem Content="3 PM" />
            <ComboBoxItem Content="4 PM" />
            <ComboBoxItem Content="5 PM" />
            <ComboBoxItem Content="6 PM" />
            <ComboBoxItem Content="7 PM" />
            <ComboBoxItem Content="8 PM" />
            <ComboBoxItem Content="9 PM" />
            <ComboBoxItem Content="10 PM" />
            <ComboBoxItem Content="11 PM" />
        </ComboBox>

        <ListBox x:Name="lstMainSchedule" HorizontalAlignment="Left" Margin="205,10,0,0" VerticalAlignment="Top" Width="200" Height="411" />

        <Button x:Name="btnEmployee1" Content="Add for Anthony" HorizontalAlignment="Left" Margin="431,0,0,397" VerticalAlignment="Bottom" Width="150" Click="btnEmployee1_Click" />
        <Button x:Name="btnEmployee2" Content="Add for Jane" HorizontalAlignment="Left" Margin="431,157,0,0" VerticalAlignment="Top" Width="150" Click="btnEmployee2_Click" />
        <Button x:Name="btnEmployee3" Content="Add for Alejandro" HorizontalAlignment="Left" Margin="431,294,0,0" VerticalAlignment="Top" Width="150" Click="btnEmployee3_Click" />

        <ListBox x:Name="lstEmployee1" HorizontalAlignment="Left" Margin="431,43,0,0" VerticalAlignment="Top" Width="150" Height="100" />
        <ListBox x:Name="lstEmployee2" HorizontalAlignment="Left" Margin="431,0,0,152" VerticalAlignment="Bottom" Width="150" Height="100" />
        <ListBox x:Name="lstEmployee3" HorizontalAlignment="Left" Margin="431,321,0,0" VerticalAlignment="Top" Width="150" Height="100" />
        <Label x:Name="lblInstructions" Content="*******INSTRUCTIONS*******&#xD;&#xA;1. Select the Date and Time&#xD;&#xA;2. Select the employee&#xD;&#xA;3. All schedule edits must be &#xD;&#xA;    submitted to management." Margin="10,323,417,15"/>
