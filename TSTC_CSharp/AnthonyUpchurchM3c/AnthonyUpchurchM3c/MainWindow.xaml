<Window x:Class="AnthonyUpchurchM3c.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Binary Converter" Height="176" Width="325">
    <Grid Width="325" Margin="0,-14,0,14">
        <Label Content="Enter a number (1-10):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,19,0,0" FontFamily="Arial Black" FontSize="14" Height="26"/>
        <TextBox Name="tbxInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="200,23,0,0" FontFamily="Arial Black" FontSize="14" Height="18"/>
        <Button Content="Binary" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="25,115,0,0" Click="btnBinary_Click" FontFamily="Arial Black" FontSize="14"/>
        <Button Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="225,115,0,0" Click="btnClear_Click" FontFamily="Arial Black" FontSize="14"/>
        <Label Content="Binary:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="126,0,0,0" FontFamily="Arial Black" FontSize="14"/>
        <Label Name="lblBinary" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="200,0,0,0" FontFamily="Arial Black" FontSize="14" Height="26"/>
    </Grid>
</Window>