<Window x:Class="AnthonyUpchurchM2C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnthonyUpchurchM2C"
        mc:Ignorable="d"
        Title="Another Calculator!" Height="285" Width="281">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Number 1:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtNumber1" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize="20" Margin="5"/>

        <Label Content="Number 2:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtNumber2" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="20" Margin="5"/>

        <Label Content="Result:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <Label x:Name="lblResult" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" FontSize="20" VerticalAlignment="Center" Margin="5" Background="LightGray"/>

        <Button x:Name="btnAdd" Content="Add" Grid.Row="3" Grid.Column="0" Click="btnAdd_Click" FontSize="16" Margin="5"/>
        <Button x:Name="btnSubtract" Content="Subtract" Grid.Row="3" Grid.Column="1" Click="btnSubtract_Click" FontSize="16" Margin="5"/>
        <Button x:Name="btnMultiply" Content="Multiply" Grid.Row="3" Grid.Column="2" Click="btnMultiply_Click" FontSize="16" Margin="5"/>

        <Button x:Name="btnClear" Content="Clear" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Click="btnClear_Click" FontSize="16" Margin="5"/>
        <Button x:Name="btnExit" Content="Exit" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Click="btnExit_Click" FontSize="16" Margin="5"/>
    </Grid>
</Window>
