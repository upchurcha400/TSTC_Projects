<Window x:Class="AnthonyUpchurchM4C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnthonyUpchurchM4C"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="Orange"
        Title="FaceChange" Height="450" Width="800" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">
    <Canvas Name="MyCanvas" Focusable="True">
        <!-- Body -->
        <Rectangle Width="340" Height="116" Canvas.Left="242" Canvas.Top="318" Fill="Blue" Tag="body" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle Width="30" Height="116" Canvas.Left="397" Canvas.Top="318" Fill="Yellow" Tag="body" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Face -->
        <Rectangle Width="205" Height="222" Canvas.Left="305" Canvas.Top="98" Fill="PeachPuff" Tag="face" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Hair -->
        <Rectangle Width="227" Height="57" Canvas.Left="294" Canvas.Top="60" Fill="BurlyWood" Tag="hair" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Eyes -->
        <Ellipse Width="50" Height="50" Canvas.Left="344" Canvas.Top="159" Fill="White" Tag="eye" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Ellipse Width="50" Height="50" Canvas.Left="431" Canvas.Top="159" Fill="White" Tag="eye" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Ellipse Width="20" Height="20" Canvas.Left="354" Canvas.Top="176" Fill="Black" Tag="eye" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Ellipse Width="20" Height="20" Canvas.Left="441" Canvas.Top="176" Fill="Black" Tag="eye" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle Width="10" Height="30" Canvas.Left="362" Canvas.Top="170" Fill="Transparent" Tag="eye" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle Width="10" Height="30" Canvas.Left="449" Canvas.Top="170" Fill="Transparent" Tag="eye" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Mouth -->
        <Ellipse Width="77" Height="36" Canvas.Left="374" Canvas.Top="254" Fill="Black" Tag="mouth" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle Width="77" Height="36" Canvas.Left="374" Canvas.Top="254" Fill="Transparent" Tag="mouth" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Nose -->
        <Rectangle Width="19" Height="36" Canvas.Left="403" Canvas.Top="209" Fill="LightCoral" Tag="nose" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <!-- Button -->
        <Button Name="ToggleButton" Content="Is he Robot?" Canvas.Left="601" Canvas.Top="60" Width="100" Height="30"
                Click="ToggleView_Click"/>
    </Canvas>
</Window>