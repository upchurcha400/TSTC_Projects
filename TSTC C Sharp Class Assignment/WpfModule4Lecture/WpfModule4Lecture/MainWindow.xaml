<Window x:Class="WpfModule4Lecture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfModule4Lecture"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="Black"
        Title="Mod4WPFLecture" Height="350" Width="525" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">
    <Canvas Name="MyCanvas" Focusable="True">
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="20" Canvas.Top="20" Fill="LightSeaGreen" Tag="clover" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="20" Canvas.Top="140" Fill="LightSeaGreen" Tag="clover" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="20" Canvas.Top="270" Fill="LightSeaGreen" Tag="clover" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="240" Canvas.Top="20" Fill="LightYellow" Tag="moon" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="240" Canvas.Top="140" Fill="LightYellow" Tag="moon" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="240" Canvas.Top="270" Fill="LightYellow" Tag="moon" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="455" Canvas.Top="20" Fill="LightPink" Tag="heart" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="455" Canvas.Top="140" Fill="LightPink" Tag="heart" />
        <Rectangle Width="50" Height="50" Margin="0" Canvas.Left="455" Canvas.Top="270" Fill="LightPink" Tag="heart" />
    </Canvas>
</Window>